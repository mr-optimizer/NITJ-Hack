<%- include("partials/header")-%>
  <title>Register</title>
  </head>

  <body>

    <div>
      <img class="registercompImg" src="images/register.jpg" alt="">
    </div>

    <div class="registerCompanies">
      <h1>Register</h1>
      <form action="/registerCompanies" method="POST">
        <div class="form-row">
          <div class="col-md-6 form-group" style="padding-right: 1%;">
            <input type="text" class="form-control" name="managername" placeholder="Manager's name">
          </div>
          <div class="col-md-6 form-group" style="padding-left:1%;">
            <input class="form-control" type="tel" id="phonef" name="phonef" pattern="[0-9]{10}"
              placeholder="Phone:(10-digits only.)" required>
          </div>
        </div>
        <hr>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <input type="email" class="form-control" name="email" id="inputEmail4" placeholder="Email" required>
          </div>
          <div class="form-group col-md-6">
            <label for="inputPassword4">Password</label>
            <input type="password" class="form-control" name="password" id="inputPassword4" placeholder="Password" required>
          </div>
        </div>
        <div class="form-group">
          <label for="inputAddress">Company Name</label>
          <input type="text" class="form-control" name="companyname" id="inputAddress" placeholder="example:farmBusiness" required>
        </div>
        <div class="form-group">
          <label for="inputAddress2">Address </label>
          <input type="text" class="form-control" name="address" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" name="city" id="inputCity" required>
          </div>
          <div class="form-group col-md-4">
            <label for="inputState">State</label>
            <select id="inputState" class="form-control" name="state" required>
              <option selected>Choose...</option>
              <option>Bihar</option>
              <option>Punjab</option>
              <option>Hariyana</option>
              <option>MP</option>
              <option>UP</option>
              <option>Gujrat</option>
              <option>Jharkhand</option>
              <option>Goa</option>
              <option>Delhi</option>
            </select>
          </div>
          <div class="form-group col-md-2">
            <label for="inputZip">Pin-Code</label>
            <input type="tel" class="form-control" name="pin" pattern="[0-9]{6}" id="inputZip" required>
          </div>
        </div>
        <div class="form-group col-md-6">
          <label for="input">GSTIN</label>
          <input type="text" class="form-control" name="gstin" id="inputCity" required>
          <p style="color: rgb(117, 231, 3);"><em><%= message %></em></p>
        </div>

        <div align="right">
          <button type="submit" class="btn btn-primary btn-lg btn-dark">Sign in</button>
        </div>

      </form>
    </div>






    <%- include("partials/footer") -%>